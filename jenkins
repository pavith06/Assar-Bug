pipeline {
    agent {
        label "angular"
    }
     stages {
    stage('NPM Install') {
         steps {
            sh 'npm install'
         }
    }
    stage('Lint') {
         steps {
        sh 'echo lintt'
         }
    }
    stage('Build') {
         steps {
        sh 'ng build'
         }
    }

    stage('Archive') {
 steps {
      archiveArtifacts artifacts: 'dist/**'
 }
    }

    stage('Deploy') {
         steps {
        echo "Deploying..."
         }
    }
}
}
